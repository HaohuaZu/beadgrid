.profile-page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 20rpx 16rpx calc(env(safe-area-inset-bottom) + 170rpx);
  background: #f7f8fa;
}

.summary-card {
  padding: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.summary-main {
  display: flex;
  align-items: center;
  min-width: 0;
}

.avatar {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
  background: linear-gradient(150deg, #ff8fa6, #ff3b5c);
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.summary-meta {
  margin-left: 12rpx;
  min-width: 0;
}

.name-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.nickname {
  font-size: 38rpx;
  color: #1f2430;
  font-weight: 700;
}

.bean-text {
  font-size: 30rpx;
  color: #ff3b5c;
  font-weight: 700;
}

.reuse-text {
  margin-top: 2rpx;
  font-size: 24rpx;
  color: #667085;
}

.quick-row {
  display: flex;
  gap: 10rpx;
}

.quick-item {
  width: 112rpx;
  height: 112rpx;
  border-radius: 14rpx;
  background: #f6f8fc;
  color: #667085;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 5rpx;
}

.quick-icon {
  width: 36rpx;
  height: 36rpx;
  border-radius: 10rpx;
  background: #ffe6ec;
  color: #ff3b5c;
  font-size: 20rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.account-card,
.stats-card,
.menu-card {
  margin-top: 14rpx;
  padding: 16rpx;
}

.account-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 34rpx;
  color: #1f2430;
  padding: 8rpx 0;
}

.account-label {
  color: #667085;
}

.account-value {
  max-width: 380rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 600;
}

.copy-btn {
  margin-left: auto;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 12rpx;
  border: 1rpx solid #ff9aab;
  background: #fff;
  color: #ff3b5c;
  font-size: 24rpx;
  padding: 0 18rpx;
}

.copy-btn::after {
  border: none;
}

.stats-card {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 8rpx;
}

.stat-item {
  background: #f8fafc;
  border-radius: 12rpx;
  min-height: 108rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.stat-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2430;
}

.stat-label {
  font-size: 22rpx;
  color: #667085;
}

.menu-item {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  color: #1f2430;
  border-bottom: 1rpx solid #eef1f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #98a2b3;
  font-size: 36rpx;
}

.contact-btn {
  margin-top: 16rpx;
  height: 88rpx;
  border-radius: 16rpx;
  background: #fff;
  color: #1f2430;
  border: 1rpx solid #e6eaf0;
  font-size: 32rpx;
}

.contact-btn::after {
  border: none;
}
