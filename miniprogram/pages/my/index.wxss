.my-page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 20rpx 16rpx calc(env(safe-area-inset-bottom) + 300rpx);
  background:
    radial-gradient(circle at 8% 0%, #fff1f5 0%, transparent 24%),
    radial-gradient(circle at 92% 8%, #eef4ff 0%, transparent 22%),
    #f7f8fa;
}

.works-list {
  margin-top: 2rpx;
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.work-card {
  padding: 12rpx;
}

.work-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.work-title-editable {
  min-width: 0;
  flex: 1;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  gap: 8rpx;
  padding: 4rpx 0;
}

.work-title {
  min-width: 0;
  flex: 0 1 auto;
  max-width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #1F2430;
  font-weight: 700;
}

.work-title-edit-icon {
  display: inline-block;
  flex-shrink: 0;
  color: #98A2B3;
  font-size: 20rpx;
  line-height: 1;
  transform: scaleX(-1);
}

.work-status {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background: #EAFBF2;
  color: #22C55E;
  font-size: 22rpx;
}

.work-status.is-generating {
  background: #FFF4E5;
  color: #B54708;
}

.work-status.is-failed {
  background: #FEECEE;
  color: #EF4444;
}

.preview-row {
  margin-top: 10rpx;
  display: flex;
  gap: 10rpx;
}

.preview-block {
  flex: 1;
  height: 136rpx;
  border-radius: 10rpx 18rpx 10rpx 18rpx;
  position: relative;
  overflow: hidden;
}

.preview-tone-origin-a {
  background: linear-gradient(150deg, #9BA8C5, #6F7FA6);
}

.preview-tone-ai-a {
  background: linear-gradient(150deg, #B8C3E0, #8C9DC5);
}

.preview-tone-grid-a {
  background: linear-gradient(150deg, #C9D2EA, #7F8FB9);
}

.preview-tone-origin-b {
  background: linear-gradient(150deg, #95A4C8, #6878A3);
}

.preview-tone-ai-b {
  background: linear-gradient(150deg, #CBD5F0, #99A9D1);
}

.preview-tone-grid-b {
  background: linear-gradient(150deg, #D4DDF3, #8697BF);
}

.preview-image {
  width: 100%;
  height: 100%;
  display: block;
}

.preview-block-grid {
  background: #f8fafc;
}

.preview-image-grid {
  background: #fff;
}

.preview-block-grid::after {
  content: "";
  position: absolute;
  inset: 0;
  z-index: 1;
  pointer-events: none;
  background-image:
    linear-gradient(to right, rgba(15, 23, 42, 0.18) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(15, 23, 42, 0.18) 1px, transparent 1px);
  background-size: 10px 10px;
  opacity: 0.46;
}

.preview-block-grid .preview-label {
  z-index: 2;
}

.preview-placeholder {
  width: 100%;
  height: 100%;
  color: rgba(255, 255, 255, 0.96);
  font-size: 24rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-generating {
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #F4F6F8, #E6EAF0);
  color: #344054;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.preview-generating-icon {
  font-size: 24rpx;
  line-height: 1;
}

.preview-generating-title {
  font-size: 22rpx;
  font-weight: 700;
}

.preview-generating-sub {
  font-size: 18rpx;
  color: #667085;
}

.preview-label {
  position: absolute;
  left: 8rpx;
  right: 8rpx;
  bottom: 8rpx;
  height: 34rpx;
  border-radius: 10rpx;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0), rgba(15, 23, 42, 0.52));
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.work-meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #667085;
}

.work-stats {
  margin-top: 6rpx;
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  font-size: 22rpx;
  color: #667085;
}

.work-stats .coin {
  color: #FF3B5C;
}

.work-footer {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.work-date {
  flex-shrink: 0;
  white-space: nowrap;
  font-size: 24rpx;
  color: #98A2B3;
}

.work-footer-actions {
  margin-left: auto;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.footer-sheet-btn {
  height: 50rpx;
  min-width: 144rpx;
  padding: 0 16rpx;
  margin: 0;
  box-sizing: border-box;
  border-radius: 13rpx;
  border: 2rpx solid #FF8AA0;
  background: #FFF1F4;
  color: #FF3B5C;
  font-size: 24rpx;
  font-weight: 700;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.footer-sheet-btn::after {
  border: none;
}

.footer-sheet-icon {
  width: 18rpx;
  height: 18rpx;
  border: 2rpx solid #FF5A7E;
  border-radius: 4rpx;
  position: relative;
  box-sizing: border-box;
}

.footer-sheet-icon::before {
  content: "";
  position: absolute;
  left: 4rpx;
  right: 4rpx;
  top: 6rpx;
  height: 2rpx;
  background: #FF5A7E;
  border-radius: 99rpx;
}

.footer-sheet-icon::after {
  content: "";
  position: absolute;
  left: 4rpx;
  right: 4rpx;
  bottom: 4rpx;
  height: 2rpx;
  background: #FF5A7E;
  border-radius: 99rpx;
}

.footer-sheet-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #FF3B5C;
  line-height: 1;
}

.footer-delete-btn {
  width: 52rpx;
  height: 52rpx;
  min-width: 52rpx;
  max-width: 52rpx;
  flex: 0 0 52rpx;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  border-radius: 50%;
  border: none;
  background: #F8EDEF;
  color: #8A94A6;
  font-size: 0;
  line-height: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-delete-btn::after {
  border: none;
}

.footer-delete-icon {
  width: 15rpx;
  height: 13rpx;
  border: 2rpx solid #8B95A7;
  border-top: none;
  border-radius: 0 0 3rpx 3rpx;
  position: relative;
  box-sizing: border-box;
}

.footer-delete-icon::before {
  content: "";
  position: absolute;
  left: -3rpx;
  right: -3rpx;
  top: -5rpx;
  height: 2rpx;
  background: #8B95A7;
  border-radius: 99rpx;
}

.footer-delete-icon::after {
  content: "";
  position: absolute;
  top: -8rpx;
  left: 3rpx;
  width: 8rpx;
  height: 2rpx;
  background: #8B95A7;
  border-radius: 99rpx;
}

.footer-sheet-btn[disabled],
.footer-delete-btn[disabled] {
  opacity: 0.5;
}

.creator-panel {
  margin-top: 12rpx;
  padding: 14rpx;
}

.creator-title {
  font-size: 30rpx;
  color: #1F2430;
  font-weight: 700;
}

.creator-upload {
  margin-top: 12rpx;
  border: 2rpx dashed #E6EAF0;
  border-radius: 14rpx;
  background: #F8FAFC;
  min-height: 170rpx;
  padding: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.creator-upload-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #FFDCE5;
  color: #FF3B5C;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
}

.creator-upload-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #667085;
}

.creator-preview {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
}

.creator-file-line {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #667085;
}

.form-label {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #667085;
}

.text-input {
  margin-top: 8rpx;
  height: 66rpx;
  border-radius: 12rpx;
  background: #FFFFFF;
  border: 1rpx solid #E6EAF0;
  padding: 0 16rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}

.chip-row {
  margin-top: 8rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.chip {
  padding: 8rpx 14rpx;
  border-radius: 12rpx;
  background: #F8FAFC;
  border: 1rpx solid #E6EAF0;
  color: #667085;
  font-size: 22rpx;
}

.chip.is-active {
  background: linear-gradient(135deg, #FF3B5C, #E53150);
  color: #fff;
  border-color: transparent;
}

.submit-btn {
  margin-top: 14rpx;
  height: 72rpx;
  border-radius: 14rpx;
  border: none;
  background: linear-gradient(135deg, #FF3B5C, #E53150);
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
}

.submit-btn::after {
  border: none;
}

.creator-list {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.creator-item {
  padding: 14rpx;
}

.creator-item-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.creator-item-title {
  font-size: 30rpx;
  color: #1F2430;
  font-weight: 700;
}

.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 21rpx;
}

.status-approved {
  background: #EAFBF2;
  color: #22C55E;
}

.status-pending {
  background: #EEF4FF;
  color: #3B82F6;
}

.status-rejected {
  background: #FEECEE;
  color: #EF4444;
}

.creator-item-meta {
  margin-top: 6rpx;
  font-size: 23rpx;
  color: #667085;
}

.creator-reason {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #EF4444;
}

.resubmit-btn {
  margin-top: 10rpx;
  width: 176rpx;
  height: 56rpx;
  border-radius: 12rpx;
  border: none;
  background: #FFE8EE;
  color: #FF3B5C;
  font-size: 23rpx;
}

.resubmit-btn::after {
  border: none;
}

.fab {
  position: fixed;
  right: 24rpx;
  bottom: calc(env(safe-area-inset-bottom) + 200rpx);
  width: 96rpx;
  height: 96rpx;
  border-radius: 18rpx;
  background: linear-gradient(135deg, #FF3B5C, #E53150);
  color: #fff;
  font-size: 62rpx;
  line-height: 92rpx;
  text-align: center;
  box-shadow: 0 14rpx 30rpx rgba(229, 49, 80, 0.24);
  z-index: 22;
}

.overlay {
  position: fixed;
  inset: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  box-sizing: border-box;
}

.naming-overlay {
  z-index: 120;
}

.naming-modal {
  max-width: 610rpx;
  padding: 24rpx;
  border-radius: 16rpx 24rpx 16rpx 24rpx;
}

.naming-title {
  font-size: 36rpx;
  color: #1F2430;
  font-weight: 700;
}

.naming-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #667085;
  line-height: 1.55;
}

.naming-input {
  margin-top: 16rpx;
  height: 78rpx;
  border: 1.5rpx solid #E6EAF0;
  border-radius: 12rpx;
  background: #fff;
  font-size: 30rpx;
  color: #1F2430;
  padding: 0 18rpx;
  box-sizing: border-box;
}

.naming-error {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #EF4444;
}

.naming-actions {
  margin-top: 18rpx;
  display: flex;
  gap: 10rpx;
}

.naming-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.naming-btn::after {
  border: none;
}

.naming-btn.cancel {
  background: #F2F4F7;
  color: #667085;
}

.naming-btn.confirm {
  background: linear-gradient(135deg, #FF3B5C, #E53150);
  color: #fff;
}

.preview-overlay {
  z-index: 101;
}

.preview-modal {
  width: 100%;
  max-width: 640rpx;
  padding: 18rpx;
  border-radius: 16rpx 28rpx 16rpx 28rpx;
}

.preview-modal-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.preview-modal-title {
  font-size: 30rpx;
  color: #1F2430;
  font-weight: 700;
}

.preview-modal-label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #667085;
}

.preview-large {
  margin-top: 12rpx;
  height: 460rpx;
  border-radius: 16rpx;
}

.preview-large-image {
  margin-top: 12rpx;
  width: 100%;
  height: 460rpx;
  border-radius: 16rpx;
  background: #F8FAFC;
}

.modal-card {
  width: 100%;
  max-width: 650rpx;
  border-radius: 16rpx 28rpx 16rpx 28rpx;
  background: #fff;
  box-shadow: 0 28rpx 70rpx rgba(0, 0, 0, 0.25);
  position: relative;
}

.modal-close {
  font-size: 42rpx;
  line-height: 1;
  color: #98A2B3;
}

.upload-modal {
  padding: 24rpx;
  height: 84vh;
  max-height: 1200rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

.upload-modal-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.upload-modal-title {
  font-size: 56rpx;
  color: #1F2430;
  font-weight: 700;
}

.upload-divider {
  margin: 16rpx 0 20rpx;
  height: 1rpx;
  background: #E6EAF0;
}

.upload-scroll {
  flex: 1;
  min-height: 0;
}

.upload-scroll-inner {
  padding-right: 4rpx;
  padding-bottom: 140rpx;
}

.upload-drop {
  border: 2rpx dashed #E6EAF0;
  border-radius: 12rpx 20rpx 12rpx 20rpx;
  background: #F8FAFC;
  padding: 20rpx;
  text-align: center;
  min-height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.robot {
  font-size: 70rpx;
}

.upload-preview {
  width: 100%;
  height: 360rpx;
  border-radius: 14rpx;
  background: #fff;
}

.upload-preview-fallback {
  width: 100%;
  height: 260rpx;
  border-radius: 14rpx;
  background: #fff;
  border: 1rpx solid #E6EAF0;
  color: #667085;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.upload-fallback-name {
  max-width: 90%;
  font-size: 22rpx;
  color: #667085;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.upload-file-meta {
  margin-top: 12rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.upload-file-name {
  max-width: 80%;
  font-size: 24rpx;
  color: #1F2430;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.upload-file-size {
  font-size: 22rpx;
  color: #98A2B3;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: #F2F4F7;
}

.upload-title {
  margin-top: 8rpx;
  font-size: 34rpx;
  color: #1F2430;
  font-weight: 700;
}

.upload-subtitle {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #98A2B3;
}

.warn-box {
  margin-top: 16rpx;
  background: #FFF7E8;
  border: 1rpx solid #F9D9A8;
  border-radius: 14rpx;
  padding: 14rpx;
  color: #B54708;
  font-size: 23rpx;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.setting-block {
  margin-top: 16rpx;
}

.setting-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1F2430;
}

.seg-row {
  margin-top: 10rpx;
  display: flex;
  gap: 8rpx;
}

.seg-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 6rpx;
  border-radius: 10rpx;
  border: 1rpx solid #E6EAF0;
  font-size: 24rpx;
  color: #667085;
  background: #F8FAFC;
}

.seg-item.is-active {
  color: #fff;
  border-color: #FFD2DD;
  background: linear-gradient(135deg, #FF3B5C, #E53150);
}

.seg-row-wrap {
  flex-wrap: wrap;
}

.custom-input-row {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.custom-input {
  flex: 1;
  height: 64rpx;
  border: 1.5rpx solid #E6EAF0;
  border-radius: 10rpx;
  background: #fff;
  padding: 0 14rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #1F2430;
}

.custom-input-hint {
  font-size: 24rpx;
  color: #667085;
  font-weight: 700;
}

.setting-note {
  margin-top: 10rpx;
  min-height: 56rpx;
  border-radius: 12rpx;
  background: #EEF4FF;
  border-left: 6rpx solid #3B82F6;
  color: #3B5B86;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 14rpx;
  box-sizing: border-box;
}

.setting-mini-note {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #667085;
}

.start-convert-btn {
  margin-top: 24rpx;
  height: 90rpx;
  border-radius: 14rpx;
  background: linear-gradient(135deg, #3B82F6, #2F6FDB);
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 14rpx 30rpx rgba(59, 130, 246, 0.24);
}

.start-convert-btn::after {
  border: none;
}

.start-convert-btn[disabled] {
  opacity: 0.75;
}
