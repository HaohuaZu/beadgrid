@font-face {
  font-family: "remixicon";
  src: url("../../assets/fonts/remixicon.ttf") format("truetype");
  font-weight: normal;
  font-style: normal;
}

.iconfont {
  font-family: "remixicon", sans-serif !important;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
}

.iconfont::before {
  display: inline-block;
}

.ri-edit-2-line::before { content: "\ec80"; }
.ri-layout-grid-line::before { content: "\ee90"; }
.ri-arrow-go-back-line::before { content: "\ea58"; }
.ri-arrow-go-forward-line::before { content: "\ea5a"; }
.ri-drag-move-2-line::before { content: "\ec60"; }
.ri-focus-3-line::before { content: "\ed4c"; }
.ri-grid-line::before { content: "\eddf"; }
.ri-hashtag::before { content: "\edfc"; }
.ri-crosshair-2-line::before { content: "\f3b3"; }
.ri-flip-horizontal-line::before { content: "\f4d8"; }
.ri-focus-2-line::before { content: "\ed4a"; }

.editor-page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 20rpx 16rpx calc(env(safe-area-inset-bottom) + 24rpx);
  background:
    radial-gradient(circle at 8% 0%, #fff3f6 0%, transparent 25%),
    radial-gradient(circle at 98% 8%, #f2f7ff 0%, transparent 22%),
    #f7f8fa;
}

.editor-head {
  padding: 16rpx;
}

.editor-title {
  font-size: 34rpx;
  color: #1f2430;
  font-weight: 700;
}

.editor-sub {
  margin-top: 6rpx;
  font-size: 23rpx;
  color: #667085;
}

.editor-top-row {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.mode-row {
  margin-top: 12rpx;
  padding: 8rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 8rpx;
}

.mode-btn {
  height: 56rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e8ebf2;
  background: #ffffff;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 23rpx;
  color: #667085;
  font-weight: 700;
}

.mode-btn-icon {
  width: 24rpx;
  height: 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  line-height: 1;
}

.mode-btn-icon-fallback {
  font-family: sans-serif;
  font-weight: 700;
}

.mode-btn.is-active {
  background: #fff1f4;
  border-color: #ffbfd0;
  color: #ff3b5c;
  box-shadow: inset 0 -2rpx 0 rgba(255, 59, 92, 0.22);
}

.status-row {
  margin-top: 12rpx;
  padding: 10rpx;
  display: grid;
  grid-template-columns: minmax(0, 1fr) minmax(0, 1fr) minmax(0, 1.45fr);
  gap: 8rpx;
}

.status-chip {
  min-height: 60rpx;
  min-width: 0;
  border-radius: 14rpx;
  border: 1rpx solid #eceff5;
  background: linear-gradient(180deg, #ffffff, #f8f9fc);
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  gap: 8rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.status-label {
  font-size: 20rpx;
  color: #98a2b3;
  font-weight: 600;
  flex-shrink: 0;
}

.status-value {
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 22rpx;
  color: #1f2430;
  font-weight: 700;
  line-height: 1;
}

.status-color-chip {
  justify-content: flex-start;
  gap: 8rpx;
}

.status-color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.16);
}

.status-color-arrow {
  margin-left: auto;
  font-size: 18rpx;
  color: #98a2b3;
  font-weight: 700;
}

.status-history-chip {
  min-width: 0;
  justify-content: flex-start;
  gap: 6rpx;
}

.status-action-btn {
  margin: 0;
  height: 42rpx;
  min-width: 58rpx;
  line-height: 1;
  padding: 0 10rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #475467;
  font-size: 19rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.status-action-icon {
  width: 20rpx;
  height: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  line-height: 1;
}

.status-action-icon-fallback {
  font-family: sans-serif;
  font-weight: 700;
}

.status-action-btn::after {
  border: none;
}

.status-action-btn.is-disabled {
  border-color: #eef1f6;
  color: #b4bcc9;
  background: #f9fafd;
}

.status-history-text {
  margin-left: 4rpx;
  min-width: 52rpx;
  text-align: right;
  flex-shrink: 0;
  white-space: nowrap;
  font-size: 20rpx;
  color: #98a2b3;
  font-weight: 700;
}

.size-chip {
  height: 56rpx;
  padding: 0 20rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #dff3ff, #ffe5ea);
  color: #1f2430;
  font-size: 28rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.gesture-tip {
  flex: 1;
  min-width: 0;
  font-size: 27rpx;
  color: #475467;
  font-weight: 600;
}

.export-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 22rpx;
  border: none;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #ff5478, #ff365f);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 700;
}

.export-btn::after {
  border: none;
}

.tool-rail {
  margin-top: 12rpx;
  padding: 8rpx;
}

.tool-scroll {
  white-space: nowrap;
}

.tool-inline {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding-right: 8rpx;
}

.tool-chip {
  position: relative;
  height: 62rpx;
  min-width: 132rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  background: #ffffff;
  border: 1rpx solid #e6eaf0;
  color: #667085;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.tool-emoji {
  font-size: 20rpx;
  line-height: 1;
}

.tool-chip.is-active {
  background: #ffeff3;
  border-color: #ffbfd0;
  color: #ff3b5c;
  box-shadow: inset 0 -2rpx 0 rgba(255, 59, 92, 0.22);
}

.tool-action {
  min-width: 146rpx;
}

.tool-danger {
  color: #ff627f;
  border-color: #ffd2de;
}

.tool-erase {
  padding-right: 44rpx;
}

.tool-erase-main {
  width: 100%;
  height: 100%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.tool-erase-more {
  position: absolute;
  top: 0;
  right: 0;
  width: 42rpx;
  height: 100%;
  border-left: 1rpx solid #e6eaf0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #98a2b3;
}

.tool-chip.is-active .tool-erase-more {
  border-left-color: #ffbfd0;
  color: #ff4b6d;
}

.eraser-menu {
  position: absolute;
  top: calc(100% + 8rpx);
  left: 0;
  width: 100%;
  border-radius: 12rpx;
  border: 1rpx solid #ffd2de;
  background: #ffffff;
  box-shadow: 0 14rpx 28rpx rgba(255, 59, 92, 0.18);
  z-index: 30;
  overflow: hidden;
}

.eraser-menu-item {
  min-height: 60rpx;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #475467;
  font-weight: 600;
  background: #ffffff;
}

.eraser-menu-item + .eraser-menu-item {
  border-top: 1rpx solid #f1f3f7;
}

.eraser-menu-item.is-active {
  color: #ff3b5c;
  background: #fff1f4;
}

.canvas-panel {
  margin-top: 12rpx;
  padding: 12rpx;
}

.canvas-stage {
  position: relative;
  height: 720rpx;
  border-radius: 14rpx;
  overflow: hidden;
  border: 2rpx dashed #e3e8ef;
  background: #ffffff;
}

.editor-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

.canvas-empty {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.92);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #667085;
  font-size: 30rpx;
  gap: 8rpx;
}

.canvas-empty-sub {
  font-size: 23rpx;
  color: #98a2b3;
}

.scale-overlay {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 12;
  min-width: 120rpx;
  height: 64rpx;
  border-radius: 14rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: rgba(15, 23, 42, 0.6);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.move-shape-overlay {
  position: absolute;
  left: 50%;
  top: 20rpx;
  transform: translateX(-50%);
  z-index: 12;
  min-width: 180rpx;
  height: 52rpx;
  border-radius: 999rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
  background: rgba(15, 23, 42, 0.68);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.view-tools-row {
  margin-top: 10rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.view-tool-title {
  flex-shrink: 0;
  font-size: 22rpx;
  color: #667085;
  font-weight: 700;
  padding: 0 4rpx;
}

.view-tool-chip {
  flex-shrink: 0;
  min-width: 88rpx;
  height: 52rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #667085;
  font-size: 21rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.view-tool-icon {
  width: 20rpx;
  height: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  line-height: 1;
}

.view-tool-icon-fallback {
  font-family: sans-serif;
  font-weight: 700;
}

.view-tool-chip.is-active {
  border-color: #ffbfd0;
  color: #ff3b5c;
  background: #ffeff3;
}

.move-shape-tip {
  margin-top: 8rpx;
  padding: 10rpx 14rpx;
  font-size: 21rpx;
  color: #ff3b5c;
  font-weight: 600;
  background: linear-gradient(135deg, rgba(255, 59, 92, 0.08), rgba(255, 59, 92, 0.03));
  border: 1rpx solid #ffd4df;
}

.zoom-slider-row {
  margin-top: 8rpx;
  padding: 10rpx 12rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.zoom-label {
  flex-shrink: 0;
  font-size: 22rpx;
  color: #667085;
  font-weight: 700;
}

.zoom-slider {
  flex: 1;
  margin: 0;
}

.zoom-input {
  width: 92rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 999rpx;
  text-align: center;
  background: #ffeff3;
  border: 1rpx solid #ffd2de;
  color: #ff3b5c;
  font-size: 22rpx;
  font-weight: 700;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.zoom-unit {
  width: 24rpx;
  font-size: 22rpx;
  color: #98a2b3;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.palette-panel {
  margin-top: 12rpx;
  padding: 12rpx;
}

.palette-title {
  font-size: 24rpx;
  color: #344054;
  font-weight: 700;
}

.full-title {
  margin-top: 10rpx;
}

.used-scroll {
  margin-top: 8rpx;
  white-space: nowrap;
}

.used-row {
  display: inline-flex;
  gap: 10rpx;
  padding-right: 6rpx;
}

.color-chip {
  height: 64rpx;
  padding: 0 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  box-sizing: border-box;
}

.color-chip.is-active {
  border-color: #ff9bb1;
  background: #fff1f4;
}

.color-dot {
  width: 28rpx;
  height: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.18);
}

.color-code {
  font-size: 22rpx;
  color: #475467;
  font-weight: 700;
}

.full-scroll {
  margin-top: 8rpx;
  max-height: 330rpx;
}

.full-grid {
  display: grid;
  grid-template-columns: repeat(8, minmax(0, 1fr));
  gap: 8rpx;
  padding-right: 4rpx;
}

.full-item {
  min-height: 76rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  padding: 8rpx 4rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.full-item.is-active {
  border-color: #ff9bb1;
  background: #fff1f4;
}

.full-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.18);
}

.full-code {
  font-size: 20rpx;
  color: #475467;
  font-weight: 600;
  line-height: 1;
}

.bead-panel {
  margin-top: 12rpx;
  padding: 12rpx;
}

.bead-title {
  font-size: 30rpx;
  color: #1f2430;
  font-weight: 700;
}

.bead-sub {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #667085;
}

.bead-scroll {
  margin-top: 10rpx;
  white-space: nowrap;
}

.bead-row {
  display: inline-flex;
  gap: 10rpx;
  padding-right: 4rpx;
}

.bead-item {
  width: 124rpx;
  min-height: 138rpx;
  border-radius: 14rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 10rpx 8rpx;
}

.bead-item.is-active {
  border-color: #ff8ca6;
  background: #fff1f4;
  box-shadow: 0 8rpx 16rpx rgba(255, 59, 92, 0.15);
}

.bead-color {
  width: 54rpx;
  height: 54rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.2);
}

.bead-code {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #1f2430;
  font-weight: 700;
}

.bead-count {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #667085;
  font-weight: 600;
}

.color-picker-mask {
  position: fixed;
  inset: 0;
  z-index: 120;
  background: rgba(15, 23, 42, 0.38);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 0 12rpx calc(env(safe-area-inset-bottom) + 12rpx);
  box-sizing: border-box;
}

.color-picker-panel {
  width: 100%;
  max-height: 76vh;
  padding: 14rpx;
  box-sizing: border-box;
}

.color-picker-title {
  font-size: 28rpx;
  color: #1f2430;
  font-weight: 800;
}

.color-picker-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #667085;
  font-weight: 700;
}

.color-picker-sub-full {
  margin-top: 10rpx;
}

.color-picker-used-scroll {
  margin-top: 8rpx;
  white-space: nowrap;
}

.color-picker-full-scroll {
  margin-top: 8rpx;
  max-height: 360rpx;
}

.color-picker-footer {
  margin-top: 10rpx;
}

.color-picker-close-btn {
  margin: 0;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 999rpx;
  border: 1rpx solid #ffd2de;
  background: #fff1f4;
  color: #ff3b5c;
  font-size: 24rpx;
  font-weight: 700;
}

.color-picker-close-btn::after {
  border: none;
}
