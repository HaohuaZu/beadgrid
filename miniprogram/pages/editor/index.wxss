.iconfont {
  font-family: "remixicon", sans-serif !important;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
}

.iconfont::before {
  display: inline-block;
}

.ri-edit-2-line::before { content: "\ec80"; }
.ri-layout-grid-line::before { content: "\ee90"; }
.ri-arrow-go-back-line::before { content: "\ea58"; }
.ri-arrow-go-forward-line::before { content: "\ea5a"; }
.ri-drag-move-2-line::before { content: "\ec60"; }
.ri-focus-3-line::before { content: "\ed4c"; }
.ri-grid-line::before { content: "\eddf"; }
.ri-hashtag::before { content: "\edfc"; }
.ri-crosshair-2-line::before { content: "\f3b3"; }
.ri-flip-horizontal-line::before { content: "\f4d8"; }
.ri-focus-2-line::before { content: "\ed4a"; }

.editor-page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 20rpx 16rpx calc(env(safe-area-inset-bottom) + 24rpx);
  background:
    radial-gradient(circle at 8% 0%, #fff3f6 0%, transparent 25%),
    radial-gradient(circle at 98% 8%, #f2f7ff 0%, transparent 22%),
    #f7f8fa;
}

.editor-head {
  padding: 16rpx;
}

.editor-title {
  font-size: 34rpx;
  color: #1f2430;
  font-weight: 700;
}

.editor-sub {
  margin-top: 6rpx;
  font-size: 23rpx;
  color: #667085;
}

.editor-top-row {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  flex-wrap: nowrap;
  position: relative;
  z-index: 20;
}

.editor-top-wrap {
  position: relative;
  z-index: 10;
}

.edge-picker-mask {
  position: fixed;
  inset: 0;
  z-index: 9050;
  background: rgba(15, 23, 42, 0.52);
}

.edge-picker-float {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 9060;
  width: 640rpx;
  max-width: calc(100vw - 36rpx);
  padding: 16rpx 12rpx 12rpx;
  box-shadow: 0 16rpx 36rpx rgba(15, 23, 42, 0.14);
  background: #ffffff;
  border-radius: 18rpx;
  border: 1rpx solid #e6eaf0;
}

.edge-picker-title {
  font-size: 23rpx;
  color: #1f2430;
  font-weight: 700;
}

.edge-picker-sub {
  margin-top: 4rpx;
  font-size: 17rpx;
  color: #667085;
}

.edge-picker-grid {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.edge-picker-chip {
  height: 46rpx;
  width: 15.5%;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #475467;
  font-size: 21rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edge-picker-chip.is-active {
  border-color: #ffbfd0;
  background: #ffeff3;
  color: #ff3b5c;
}

.edge-picker-actions {
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}

.edge-picker-btn {
  height: 46rpx;
  width: 176rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 21rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edge-picker-custom {
  margin-right: 12rpx;
  background: linear-gradient(135deg, #ff5478, #ff365f);
  color: #fff;
}

.edge-picker-close {
  border: 1rpx solid #e6eaf0;
  color: #667085;
  background: #fff;
}

.mode-row {
  margin-top: 12rpx;
  padding: 8rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 8rpx;
}

.mode-btn {
  height: 56rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e8ebf2;
  background: #ffffff;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 23rpx;
  color: #667085;
  font-weight: 700;
}

.mode-btn-icon {
  width: 24rpx;
  height: 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  line-height: 1;
}

.mode-btn-icon-fallback {
  font-family: sans-serif;
  font-weight: 700;
}

.mode-btn.is-active {
  background: #fff1f4;
  border-color: #ffbfd0;
  color: #ff3b5c;
  box-shadow: inset 0 -2rpx 0 rgba(255, 59, 92, 0.22);
}

.status-row {
  margin-top: 12rpx;
  padding: 10rpx;
  display: grid;
  grid-template-columns: minmax(0, 1fr) minmax(0, 1fr) minmax(0, 1.45fr);
  gap: 8rpx;
}

.status-chip {
  min-height: 60rpx;
  min-width: 0;
  border-radius: 14rpx;
  border: 1rpx solid #eceff5;
  background: linear-gradient(180deg, #ffffff, #f8f9fc);
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  gap: 8rpx;
  padding: 0 12rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.status-label {
  font-size: 20rpx;
  color: #98a2b3;
  font-weight: 600;
  flex-shrink: 0;
}

.status-value {
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 22rpx;
  color: #1f2430;
  font-weight: 700;
  line-height: 1;
}

.status-color-chip {
  justify-content: flex-start;
  gap: 8rpx;
}

.status-color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.16);
}

.status-color-arrow {
  margin-left: auto;
  font-size: 18rpx;
  color: #98a2b3;
  font-weight: 700;
}

.status-history-chip {
  min-width: 0;
  justify-content: flex-start;
  gap: 6rpx;
}

.status-action-btn {
  margin: 0;
  height: 42rpx;
  min-width: 58rpx;
  line-height: 1;
  padding: 0 10rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #475467;
  font-size: 19rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.status-action-icon {
  width: 20rpx;
  height: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  line-height: 1;
}

.status-action-icon-fallback {
  font-family: sans-serif;
  font-weight: 700;
}

.status-action-btn::after {
  border: none;
}

.status-action-btn.is-disabled {
  border-color: #eef1f6;
  color: #b4bcc9;
  background: #f9fafd;
}

.status-history-text {
  margin-left: 4rpx;
  min-width: 52rpx;
  text-align: right;
  flex-shrink: 0;
  white-space: nowrap;
  font-size: 20rpx;
  color: #98a2b3;
  font-weight: 700;
}

.size-chip {
  height: 50rpx;
  padding: 0 14rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #dff3ff, #ffe5ea);
  color: #1f2430;
  font-size: 25rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.size-chip-clickable {
  gap: 6rpx;
  padding-right: 12rpx;
  position: relative;
  z-index: 21;
}

.size-chip-arrow {
  font-size: 18rpx;
  color: #667085;
  line-height: 1;
  transform: translateY(1rpx);
}

.gesture-tip {
  flex: 1;
  min-width: 0;
  font-size: 21rpx;
  color: #475467;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.top-history-actions {
  margin-left: auto;
  flex-shrink: 0;
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
}

.top-history-btn {
  margin: 0;
  flex: 0 0 56rpx;
  width: 56rpx;
  height: 40rpx;
  min-width: 56rpx;
  line-height: 1;
  padding: 0;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #475467;
  font-size: 20rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
}

.top-history-btn::after {
  border: none;
}

.top-history-btn.is-disabled {
  border-color: #eef1f6;
  color: #b4bcc9;
  background: #f9fafd;
}

.editor-top-actions {
  margin-left: 4rpx;
  flex-shrink: 0;
  display: inline-flex;
  align-items: center;
  gap: 2rpx;
  width: auto;
}

.top-action-btn {
  flex: none;
  width: auto;
  min-width: 0;
  height: 40rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  border-radius: 999rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  font-size: 18rpx;
  font-weight: 700;
}

.top-history-icon {
  font-size: 18rpx;
  line-height: 1;
}

.top-history-text {
  font-size: 18rpx;
  line-height: 1;
}

.export-btn {
  margin: 0;
  border: none;
  background: linear-gradient(135deg, #ff5478, #ff365f);
  color: #ffffff;
}

.bead-mode-btn {
  margin: 0;
  border: 1rpx solid #ffbfd0;
  background: #fff1f4;
  color: #ff3b5c;
}

.tool-rail {
  margin-top: 10rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tool-title {
  flex-shrink: 0;
  font-size: 22rpx;
  color: #667085;
  font-weight: 700;
  padding: 0 4rpx;
}

.tool-scroll {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
}

.tool-inline {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding-right: 6rpx;
}

.tool-chip {
  position: relative;
  flex-shrink: 0;
  min-width: 88rpx;
  height: 52rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #667085;
  font-size: 21rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.tool-icon {
  width: 20rpx;
  height: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  line-height: 1;
}

.tool-emoji {
  width: 20rpx;
  height: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  line-height: 1;
}

.tool-chip.is-active {
  border-color: #ffbfd0;
  color: #ff3b5c;
  background: #ffeff3;
}

.tool-action {
  min-width: 114rpx;
}

.tool-danger {
  color: #ff627f;
  border-color: #ffd2de;
}

.tool-erase {
  min-width: 122rpx;
  padding-right: 38rpx;
}

.tool-erase-main {
  width: 100%;
  height: 100%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.tool-erase-more {
  position: absolute;
  top: 0;
  right: 0;
  width: 32rpx;
  height: 100%;
  border-left: 1rpx solid #e6eaf0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #98a2b3;
}

.tool-chip.is-active .tool-erase-more {
  border-left-color: #ffbfd0;
  color: #ff4b6d;
}

.eraser-menu {
  position: absolute;
  top: calc(100% + 8rpx);
  left: 0;
  width: 100%;
  border-radius: 12rpx;
  border: 1rpx solid #ffd2de;
  background: #ffffff;
  box-shadow: 0 14rpx 28rpx rgba(255, 59, 92, 0.18);
  z-index: 30;
  overflow: hidden;
}

.eraser-menu-item {
  min-height: 60rpx;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #475467;
  font-weight: 600;
  background: #ffffff;
}

.eraser-menu-item + .eraser-menu-item {
  border-top: 1rpx solid #f1f3f7;
}

.eraser-menu-item.is-active {
  color: #ff3b5c;
  background: #fff1f4;
}

.canvas-panel {
  margin-top: 12rpx;
  padding: 0;
  position: relative;
  z-index: 0;
  background: transparent;
  border: none;
  box-shadow: none;
}

.canvas-stage {
  position: relative;
  z-index: 0;
  height: 720rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 0;
  background:
    linear-gradient(45deg, #e6e8ed 25%, transparent 25%, transparent 75%, #e6e8ed 75%, #e6e8ed),
    linear-gradient(45deg, #e6e8ed 25%, transparent 25%, transparent 75%, #e6e8ed 75%, #e6e8ed),
    #f2f4f8;
  background-position: 0 0, 18rpx 18rpx;
  background-size: 36rpx 36rpx;
}

.editor-canvas {
  position: relative;
  z-index: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.editor-canvas-snapshot {
  position: absolute;
  inset: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
  display: block;
  pointer-events: none;
}

.canvas-stage.is-overlay-open {
  pointer-events: none;
}

.canvas-empty {
  position: absolute;
  inset: 0;
  background: rgba(255, 255, 255, 0.92);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #667085;
  font-size: 30rpx;
  gap: 8rpx;
}

.canvas-empty-sub {
  font-size: 23rpx;
  color: #98a2b3;
}

.scale-overlay {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 12;
  min-width: 120rpx;
  height: 64rpx;
  border-radius: 14rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: rgba(15, 23, 42, 0.6);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.move-shape-overlay {
  position: absolute;
  left: 50%;
  top: 20rpx;
  transform: translateX(-50%);
  z-index: 12;
  min-width: 180rpx;
  height: 52rpx;
  border-radius: 999rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
  background: rgba(15, 23, 42, 0.68);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.view-tools-row {
  margin-top: 10rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.view-tool-title {
  flex-shrink: 0;
  font-size: 22rpx;
  color: #667085;
  font-weight: 700;
  padding: 0 4rpx;
}

.view-tool-scroll {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
}

.view-tool-inline {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding-right: 6rpx;
}

.view-tool-chip {
  flex-shrink: 0;
  min-width: 88rpx;
  height: 52rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #667085;
  font-size: 21rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.view-tool-icon {
  width: 20rpx;
  height: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  line-height: 1;
}

.view-tool-icon-fallback {
  font-family: sans-serif;
  font-weight: 700;
}

.view-tool-chip.is-active {
  border-color: #ffbfd0;
  color: #ff3b5c;
  background: #ffeff3;
}

.move-shape-tip {
  margin-top: 8rpx;
  padding: 10rpx 14rpx;
  font-size: 21rpx;
  color: #ff3b5c;
  font-weight: 600;
  background: linear-gradient(135deg, rgba(255, 59, 92, 0.08), rgba(255, 59, 92, 0.03));
  border: 1rpx solid #ffd4df;
}

.section-switch {
  margin-top: 10rpx;
  padding: 8rpx;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 8rpx;
}

.section-switch-btn {
  height: 54rpx;
  border-radius: 14rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #475467;
  font-size: 22rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.section-switch-btn.is-active {
  border-color: #ffbfd0;
  background: #ffeff3;
  color: #ff3b5c;
}

/* ── Editor color-stats (bead) panel ── */
.editor-bead-panel {
  margin-top: 10rpx;
  padding: 14rpx 12rpx 12rpx;
}

.editor-bead-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.editor-bead-head-main {
  min-width: 0;
  flex: 1;
}

.editor-bead-head-actions {
  flex-shrink: 0;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.editor-bead-title {
  font-size: 26rpx;
  color: #1f2430;
  font-weight: 700;
}

.editor-bead-pick-btn {
  height: 44rpx;
  padding: 0 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  color: #475467;
  font-size: 20rpx;
  font-weight: 700;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
}

.editor-bead-pick-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 6rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.16);
}

.editor-bead-toggle {
  flex-shrink: 0;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid #ffd2de;
  background: #fff3f6;
  font-size: 19rpx;
  color: #ff3b5c;
  font-weight: 700;
}

.editor-bead-preview-scroll {
  margin-top: 8rpx;
  height: 330rpx;
}

.editor-bead-full-scroll {
  margin-top: 10rpx;
  max-height: 420rpx;
}

.editor-bead-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding-right: 4rpx;
}

.editor-bead-item {
  flex-shrink: 0;
  border-radius: 14rpx;
  border: 1rpx solid #e6eaf0;
  background: #ffffff;
  padding: 10rpx 8rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.editor-bead-item-preview {
  width: 116rpx;
}

.editor-bead-item-full {
  width: calc((100% - 30rpx) / 4);
}

.editor-bead-grid-preview {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 10rpx;
  padding-right: 4rpx;
}

.editor-bead-item-stat {
  width: auto;
  min-height: 112rpx;
}

.editor-bead-item.is-active {
  border-color: #ffbfd0;
  background: #ffeff3;
  box-shadow: inset 0 -2rpx 0 rgba(255, 59, 92, 0.2);
}

.editor-bead-color {
  width: 54rpx;
  height: 54rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(15, 23, 42, 0.14);
  display: flex;
  align-items: center;
  justify-content: center;
}

.editor-bead-color-code {
  font-size: 21rpx;
  font-weight: 700;
  line-height: 1.2;
  letter-spacing: 0.3rpx;
}

.editor-bead-count {
  font-size: 20rpx;
  color: #98a2b3;
  font-weight: 600;
  line-height: 1;
}

.palette-panel {
  margin-top: 12rpx;
  padding: 12rpx;
}

.palette-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.palette-title {
  font-size: 24rpx;
  color: #344054;
  font-weight: 700;
}

.palette-type-btn {
  flex-shrink: 0;
  height: 44rpx;
  padding: 0 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e6eaf0;
